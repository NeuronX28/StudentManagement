<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.StudentManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface and background -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@color/black</item>

        <item name="android:textColorHint">@color/teal_700</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Set global font to Poppins -->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- for alert dialog -->
    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Button text color for light mode -->
        <item name="android:buttonTint">#ffff</item>
    </style>
    <!-- Dark Mode Specific Styles -->

    <!-- Screen background for dark mode -->
    <style name="SCREEN">
        <item name="android:background">#000000</item> <!-- Dark gray background -->
    </style>

    <!-- Text color for dark mode -->
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item> <!-- White text for contrast on dark background -->
    </style>

    <!-- Button background for dark mode -->
    <style name="BUTTON">
        <item name="android:background">@color/purple_700</item> <!-- Dark purple button background -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text on buttons for contrast -->
    </style>

    <!-- Hint text color for dark mode -->
    <style name="HINT">
        <item name="android:textColorHint">#353535</item> <!-- Light gray for hint text -->
    </style>

    <!-- Floating Action Button (FAB) Style -->
    <style name="FAB">
        <item name="android:backgroundTint">@color/teal_200</item> <!-- Secondary color for FAB -->
        <item name="android:tint">@color/black</item> <!-- Black icon on FAB for contrast -->
    </style>

    <!-- CardView background for dark mode -->
    <style name="CARD">
        <item name="android:background">#333333</item> <!-- Dark background for cards -->
        <item name="android:elevation">4dp</item> <!-- Elevation for card shadow effect -->
    </style>
    <style name="ETEXT">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="BOX">
        <item name="android:background">@drawable/round_dark</item>
    </style>
    <!-- Overall Theme Declaration -->
    <style name="Theme.StudentManagement" parent="Base.Theme.StudentManagement" />
</resources>